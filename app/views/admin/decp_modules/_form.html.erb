<%= form_for(@admin_decp_module, :html => {:name => "myForm"}) do |f| %>
    <% if @admin_decp_module.errors.any? %>
        <div id="error_explanation" xmlns="http://www.w3.org/1999/html">
          <h2><%= pluralize(@admin_decp_module.errors.count, "error") %> prohibited this admin_decp_module from being
            saved:</h2>

          <ul>
            <% @admin_decp_module.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= (params[:id].nil? ? (f.text_field :name) : (f.text_field :name, :readonly => true)) %>

    </div>
    <div class="field">
      <%= f.label :description %>
      <br/>
      <%= f.text_area :description,  :size => "24x2" %>
    </div>
    <div class="field">
      <%= f.label :active %>
      <%= f.check_box :active %>
    </div>
    <div class="field">
      <%= f.label :migration_version %>
      <br/>
      <%= f.text_field :migration_version, :readonly => true %>
    </div>


    <div class="actions">
      <%= (params[:id].nil? ? submit_tag('Insert', :onclick => "document.myForm.action = 'create';") : submit_tag('Update', :onclick => "document.myForm.action = '../update/' + document.myForm.@admin_decp_module.id;")) %>
    </div>

<% end %>